hub.dckr.ir:443 {
    encode gzip
    reverse_proxy /* {
       to http://docker:5000
        max_fails 3 
        fail_duration 30s
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Port {server_port}
        header_up X-Forwarded-Protocol {scheme}
        transport http {
            keepalive 1024s
        }
    }
    tls {
        protocols tls1.2 
    }
}

